<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cover"
    tools:context=".activity.LoginActivity">

    <FrameLayout
        android:id="@+id/formFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default_size"
        android:background="@drawable/shape_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.357">

    </FrameLayout>

    <TextView
        android:id="@+id/signItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/unselected_shape"
        android:paddingLeft="@dimen/margin_default_size"
        android:paddingTop="10dp"
        android:paddingRight="@dimen/margin_default_size"
        android:paddingBottom="10dp"
        android:text="注册"
        android:onClick="onClick"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintBottom_toTopOf="@+id/formFrag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="@+id/formFrag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/loginItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_selected"
        android:paddingLeft="@dimen/margin_default_size"
        android:paddingTop="10dp"
        android:paddingRight="@dimen/margin_default_size"
        android:paddingBottom="10dp"
        android:text="登录"
        android:onClick="onClick"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintBottom_toTopOf="@+id/formFrag"
        app:layout_constraintEnd_toStartOf="@+id/signItem"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/formFrag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>